---
import Layout from "../layouts/Layout.astro";
import Projects from "../components/Projects.astro";
import Gitlab from "../components/Gitlab.astro";
import Gmail from "../components/Gmail.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout>
  <section class="hero">
    <h1>Hola, soy Leandro Canela</h1>
    <p>
      Un estudiante de <span class="highlight">desarrollo web</span> apasionado por crear aplicaciones
      y experiencias digitales increíbles. Siempre en búsqueda de nuevos desafíos que me permitan
      crecer como desarrollador y aportar valor en cada proyecto que participo.
    </p>

    <div class="enlaces">
      <a href="https://gitlab.com/leandrocanela279" target="_blank" rel="noreferrer" class="icon-link">
        <Gitlab/>
      </a>
      <a href="mailto:lagarcia@alumnat.copernic.cat" target="_blank" rel="noreferrer" class="icon-link">
        <Gmail/>
      </a>
      <a href="/cvLeo.pdf" class="cv-btn" download="cv_leandro_canela.pdf">
        Descargar CV
      </a>
    </div>
  </section>

  <section class="projects-section">
    <Projects/>
  </section>

  <section class="technologies-section">
    <Technologies/>
  </section>
</Layout>

<style>
/* ---------- HERO ---------- */
.hero {
  max-width: 880px;
  margin: 0 auto;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1.5rem;
}

.hero h1 {
  font-size: 3rem;
  margin: 0;
}

.hero p {
  font-size: 1.2rem;
  line-height: 1.6;
  white-space: pre-line;
  max-width: 700px;
}

.hero .highlight {
  color: var(--secondary-txt-color);
}

/* ---------- ENLACES ---------- */
.enlaces {
  display: flex;
  gap: 1.5rem;
  margin-top: 1.5rem;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.icon-link {
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s;
}

.icon-link:hover {
  transform: translateY(-4px);
}

.cv-btn {
  text-decoration: none;
  color: inherit;
  border: 1px solid white;
  border-radius: 16px;
  padding: 10px 18px;
  box-shadow: 10px 5px 10px 4px rgba(49, 79, 197, 0.2);
  transition: all 0.3s ease;
}

.cv-btn:hover {
  background-color: rgba(69, 65, 65, 0.8);
  transform: translateY(-3px);
}

/* ---------- SECTIONS ---------- */
.projects-section,
.technologies-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rem;
  margin: 4rem 0;
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 768px) {
  .hero h1 {
    font-size: 2rem;
  }
  .hero p {
    font-size: 1rem;
  }
  .enlaces {
    gap: 1rem;
  }
}

@media (max-width: 420px) {
  .hero h1 {
    font-size: 1.6rem;
  }
  .hero p {
    font-size: 0.95rem;
  }
  .enlaces {
    flex-direction: column;
    gap: 1rem;
  }
  .projects-section,
  .technologies-section {
    gap: 2rem;
    margin: 2rem 0;
  }
}
</style>
