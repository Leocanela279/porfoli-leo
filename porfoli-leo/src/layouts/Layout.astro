---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const nombre = "Leandro Canela";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio de {nombre}</title>
</head>
<body>
    <Header/>
    <main class="container">
        <slot/>
    </main>
    <Footer/>
</body>
</html>

<style is:global>

:root {
   color-scheme: dark;
    --secondary-txt-color:rgb(255, 165, 0);
    --btn-width: 220px; /* fixed width for primary buttons */
}

html {
    scroll-behavior:smooth;
}

html, body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    /* Use document flow: stretch horizontally and start vertically so content
       doesn't vertically center in the viewport on desktop */
    align-items: stretch;
    justify-content: flex-start;
    gap: 2rem;
}

body{
    font-family: 'Onest Variable',  sans-serif;

}

.container{
    width: 100%;
    max-width: 1100px;
    padding: 1rem;
    box-sizing: border-box;
    margin: 0 auto;
}

.cv{
			text-decoration: none;
			color: inherit;
			border: 1px solid white;
			border-radius: 16px;
            padding: 10px 16px;
            display: inline-block;
            text-align: center;
            width: var(--btn-width);
			box-shadow: 10px 5px 10px 4px rgba(49, 79, 197, 0.2);
			transition: 0.5s ease;

			&:hover{
				background-color: rgb(69, 65, 65);
			}
		}

@media (max-width: 600px){
    .container{
        padding: 0.75rem;
    }
}

/* Add a small top spacing so content isn't glued to the top on small viewports */
body {
    padding-top: 1.25rem;
}
</style>