---
import project1 from '../assets/project1.png';
import project2 from '../assets/project2.png';
import project3 from '../assets/project3.png';

const projects = [
  {
    title: "Landing page estática de Noticias",
    imgURL: project1.src ?? project1,
    projectURL: "https://leo-deploy-pages-883021.gitlab.io/ejercicio-noticias/index.html",
    description: "Proyecto de una página de noticias creada con HTML y CSS."
  },
  {
    title: "Sistema de gestión de Ligas Escolares Deportivas",
    imgURL: project2.src ?? project2,
    projectURL: "#",
    description: "Proyecto de una web para gestionar ligas escolares deportivas, utilizando HTML, CSS, JavaScript y PHP."
  },
  {
    title:"SAAS de gestión de restaurantes",
    imgURL: project3.src ?? project3,
    projectURL: "https://leo-dev.es/login",
    description: "Proyecto SAAS Multi-Tenant para gestionar múltiples restaurantes, desarrollado en Laravel."
  },
]
---
<section id="projects">
  <h2>Proyectos</h2>
  <div class="grid-projects">
    {projects.map((project) => (
      <div class="card">
        <div class="card-image">
          <img src={project.imgURL} alt={project.title} />
        </div>
        <div class="card-content">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <a href={project.projectURL} target="_blank" rel="noreferrer" class="btn-project">
            Ver proyecto
          </a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
/* TITULO */
h2 {
  text-align: center;
  font-size: 2.5rem;
  margin-bottom: 50px;
  color: #fff;
}

/* GRID DE PROYECTOS */
.grid-projects {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  align-items: stretch;
  padding: 0 10px;
}

/* CARD */
.card {
  display: flex;
  flex-direction: column;
  background-color: #1a1a1a;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: scale(1.02);
  box-shadow: 0 12px 25px rgba(0,0,0,0.35);
}

/* IMAGEN */
.card-image {
  overflow: hidden;
  border-radius: 16px 16px 0 0;
  height: 180px; /* altura fija para todas las cards */
}

.card-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transition: transform 0.3s ease;
}

.card-image img:hover {
  transform: scale(1.05);
}

/* CONTENIDO */
.card-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* empuja el botón hacia abajo */
  gap: 12px;
  padding: 20px;
  flex-grow: 1;
}

.card-content h3 {
  margin: 0;
  font-size: 1.4rem;
  color: #fff;
}

.card-content p {
  font-size: 1rem;
  color: #ccc;
  line-height: 1.5;
}

/* BOTON */
.btn-project {
  display: inline-block;
  text-decoration: none;
  padding: 10px 18px;
  border-radius: 12px;
  background-color: var(--secondary-txt-color);
  color: #fff;
  font-weight: bold;
  text-align: center;
  transition: all 0.3s ease;
  margin-top: auto; /* asegura que el botón esté abajo */
}

.btn-project:hover {
  background-color: #f5a623;
  transform: translateY(-2px);
}

/* RESPONSIVE */
@media(max-width: 700px) {
  .card-image {
    height: 160px;
  }

  .card-content h3 {
    font-size: 1.25rem;
  }

  .card-content p {
    font-size: 0.95rem;
  }
}

@media(max-width: 480px) {
  .grid-projects {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .card-image {
    height: 150px;
  }

  .card-content {
    padding: 16px;
    gap: 10px;
  }

  .btn-project {
    width: 100%;
    padding: 10px 0;
  }
}
</style>
